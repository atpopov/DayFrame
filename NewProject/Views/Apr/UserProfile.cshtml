    </div>


    <form action="/action_page.php">
        <div class="container">
            <h1>Профил </h1>

            <div class="card">
                <img id="myImage" src="~/Content/Images/profile1.jpg" alt="Avatar" style="width:100%">
                <div class="container1">
                    <h4><b>Име</b></h4>
                </div>
            </div>

