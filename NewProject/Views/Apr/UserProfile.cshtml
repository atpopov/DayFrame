@model Data.Model.User

@{
    Layout = null;
    var loggedInUser = (Data.Model.User)TempData["Apr"];
    TempData["Apr"] = loggedInUser;
    string name;
    if (loggedInUser.Name != null)
    {
        name = loggedInUser.Name;
    }
    else
    {
        name = "Име";
    }
    string pictureString;
    if (loggedInUser.Gender == "Мъж")
    {
        pictureString = "/Content/Images/male.jpg";
    }
    else
    {
        pictureString = "/Content/Images/female.jpg";
    }
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/html/profile_sheet.css">
