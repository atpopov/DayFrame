    </div>


    <form action="/action_page.php">
        <div class="container">
            <h1>Профил </h1>

            <div class="card">
                <img id="myImage" src=@pictureString alt="Avatar" style="width:100%">
                <div class="container1">
                    <h4><b>@loggedInUser.Name</b></h4>
                </div>
            </div>
            <div>
                <h2>Пол: @loggedInUser.Gender</h2>
            </div>

            
